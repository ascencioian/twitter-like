<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Twitter express app</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="styles.css">
  <!-- css hotlink cdn for bootsrap from website -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   <!-- bootstrap icon links cdn -->
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
  </head>
<body>
  <header>
    <section class="container">
      <h1 class='text-primary text-center mt-5 mb-5'>Twitter Express App</h1>
    </section>
  </header>

  <main>
    <section class="container text-center bg-primary text-light rounded border border-dark">

      <h2>Tweets</h2>

      <ul class="tweets">
      <% for(var i=0; i<tweets.length; i++) {%>
        <li class="message list-unstyled">
          <% let color %>
          <% if(tweets[i].favorited === true) { %>
          <% color = 'yellow' %> 
          <% } %> 
          <span style = 'color: <%= color %>'><%= tweets[i].tweet %></span>
          <span><%= tweets[i].heart %></span>
          <span><i class="fas fa-heart" aria-hidden="true"></i></span>
          <span><%= tweets[i].retweet %></span>
          <span><i class="fas fa-retweet" aria-hidden="true"></i></span>
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          <span><i class="fa fa-star" aria-hidden="true"></i></span>
        </li>
      <% } %>
      </ul>
    
      <form action="/tweets" method="POST">
        <input type="text" placeholder="What's on your mind?" name="tweet">
        <button type="submit" class='button btn-primary mb-5' >Submit</button>
      </form>

    </section>
  </main>
 
  

  
  <!-- javascript script tag from bootstrap website -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="main.js"></script>

</body>
</html>
